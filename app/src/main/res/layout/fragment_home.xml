<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:background="@drawable/green_gradient_themea"
    android:id="@+id/grid_background"
    android:rowCount="6">
       <androidx.cardview.widget.CardView
           android:layout_width="100dp"
           android:layout_height="200dp"
           android:layout_row="0"
           android:layout_column="0"
           android:layout_rowWeight="1"
           android:layout_columnWeight="1"
           app:cardCornerRadius="15dp"
           android:layout_margin="20dp"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/linearlayout1"
               android:layout_gravity="center_horizontal"
               android:orientation="vertical">
               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                  android:layout_marginLeft="10dp"
                   android:layout_marginBottom="10dp"
                   android:id="@+id/home_profile1"
                   android:src="@drawable/user"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Helli"
                   android:layout_marginTop="10dp"
                   android:paddingLeft="10dp"
                   android:id="@+id/home_profile1_tv"
                   />
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="100dp"
           android:layout_height="200dp"
           android:layout_row="1"
           android:layout_column="0"
           android:layout_rowWeight="1"
           android:layout_columnWeight="1"
           app:cardCornerRadius="15dp"
          android:layout_margin="20dp"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/linearlayout2"
               android:layout_gravity="center_horizontal"
               android:orientation="vertical">
               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:layout_marginLeft="10dp"
                   android:id="@+id/home_profile2"
                   android:src="@drawable/address"
                   android:layout_marginBottom="10dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/home_profile2_tv"
                   android:text="Helo this is satish yadav from eyuu aygdu ayuggua ayugdaud ayguau afduag"
                   android:textAlignment="center"
                   />
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="100dp"
           android:layout_height="200dp"
           android:layout_row="2"
           android:layout_column="0"
           android:layout_rowWeight="1"
           android:layout_columnWeight="1"
           app:cardCornerRadius="5dp"
           android:layout_margin="20dp"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_gravity="center_horizontal"
               android:id="@+id/linearlayout3"
               android:orientation="vertical">
               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:id="@+id/home3"
                   android:src="@drawable/number"
                   android:layout_marginLeft="10dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Helli"
                   android:id="@+id/home3_tv"
                   android:textAlignment="center"
                   />
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="100dp"
           android:layout_height="200dp"
           android:layout_row="3"
           android:layout_column="0"
           android:layout_rowWeight="1"
           android:layout_columnWeight="1"
           app:cardCornerRadius="5dp"
           android:layout_margin="20dp"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_gravity="center_horizontal"
               android:id="@+id/linearlayout4"
               android:orientation="vertical">
               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:id="@+id/home4"
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/ic_email_black_24dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Email"
                   android:id="@+id/home4_tv"
                   android:textAlignment="center"
                   />
           </LinearLayout>
       </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:cardCornerRadius="5dp"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/linearlayout5"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/home5"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_email_black_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/home5_tv"
                android:textAlignment="center"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</GridLayout>
</ScrollView>
</LinearLayout>